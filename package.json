{
    "private": true,
    "name": "remix-app-template",
    "description": "",
    "license": "",
    "scripts": {
        "build": "npm run build:css && remix build",
        "build:css": "tailwindcss -i ./app/styles/tailwind.css  -o ./app/tailwind.css --minify",
        "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
        "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --watch",
        "postinstall": "remix setup node",
        "start": "remix-serve build",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
        "lint": "pnpm format && eslint --ignore-path .gitignore .",
        "prepare": "husky install",
        "prettyquick": "pretty-quick --staged"
    },
    "dependencies": {
        "@remix-run/react": "^1.1.1",
        "@remix-run/serve": "^1.1.1",
        "@remix-run/vercel": "^1.1.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "remix": "^1.1.1"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.1.1",
        "@remix-run/eslint-config": "^1.1.1",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "concurrently": "^7.0.0",
        "eslint": "^8.5.0",
        "husky": "^7.0.4",
        "postcss": "^8.4.6",
        "prettier": "^2.5.1",
        "prettier-plugin-tailwindcss": "^0.1.3",
        "pretty-quick": "^3.1.2",
        "tailwindcss": "^3.0.7",
        "typescript": "^4.5.4"
    },
    "engines": {
        "node": ">=14"
    },
    "sideEffects": false
}
